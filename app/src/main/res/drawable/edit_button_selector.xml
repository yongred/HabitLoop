<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false"
        android:state_pressed="false">
        <shape>
            <solid
                android:color="@color/colorEditButton" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="32dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item android:state_pressed="true"
        android:state_selected="false">
        <shape>
            <solid
                android:color="@color/colorEditButtonPress" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="32dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item android:state_pressed="false"
          android:state_selected="true">
        <shape>
            <solid
                android:color="@color/colorEditButtonPress" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="32dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>