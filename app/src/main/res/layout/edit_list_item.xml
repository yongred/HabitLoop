<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/list_item_margin"
                  android:background="@drawable/list_selector"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:text="Habbit33"
            android:id="@+id/habitNameViewEdit"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"/>



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemEditButton"
            android:src="@drawable/ic_item_edit_64"
            android:background="@drawable/edit_button_selector"
            />

        <ImageButton
            android:id="@+id/itemDelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_item_64"
            android:background="@drawable/del_button_selector"
            />


    </LinearLayout>

</LinearLayout>