<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/list_item_margin"
                  android:background="@drawable/list_selector"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/itemRemoveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_48"
            android:background="@drawable/del_button_selector"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Habbit33"
            android:id="@+id/habitNameViewEdit"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemEditButton"
            android:src="@drawable/ic_edit_48"
            android:background="@drawable/edit_button_selector"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/itemRemoveButton"
            android:layout_toStartOf="@+id/itemRemoveButton"/>

    </RelativeLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </TableLayout>

</LinearLayout>